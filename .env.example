# Stock Price Predictor API Configuration

# Application Settings
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Polygon.io API (Market Data)
POLYGON_API_KEY=your_polygon_api_key_here
POLYGON_BASE_URL=https://api.polygon.io
POLYGON_RATE_LIMIT=5
POLYGON_CACHE_TTL=300

# Finnhub API (Fundamental Data)
FINNHUB_API_KEY=your_finnhub_api_key_here
FINNHUB_BASE_URL=https://finnhub.io/api/v1
FINNHUB_RATE_LIMIT=60
FINNHUB_CACHE_TTL=3600

# SEC API (Congressional & Insider Trading)
SEC_API_KEY=your_sec_api_key_here
SEC_API_BASE_URL=https://api.sec-api.io
SEC_API_RATE_LIMIT=100
SEC_API_CACHE_TTL=3600

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Model Configuration
DEFAULT_PREDICTION_TIMEFRAME=30d
CACHE_TTL_SECONDS=3600
MAX_HISTORICAL_DAYS=365

# CORS Configuration (Production)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com