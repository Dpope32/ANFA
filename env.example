# API Keys (Required)
POLYGON_API_KEY=your_polygon_api_key_here
FINNHUB_API_KEY=your_finnhub_api_key_here
QUIVER_API_KEY=your_quiver_api_key_here

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# API Rate Limits (requests per minute)
POLYGON_RATE_LIMIT=5
FINNHUB_RATE_LIMIT=60
QUIVER_RATE_LIMIT=10

# Cache TTL (seconds)
POLYGON_CACHE_TTL=300
FINNHUB_CACHE_TTL=3600
QUIVER_CACHE_TTL=1800

# Model Configuration
DEFAULT_PREDICTION_TIMEFRAME=30d
CACHE_TTL_SECONDS=3600
MAX_HISTORICAL_DAYS=365

# CORS Configuration (comma-separated origins for production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
